<div class="row small-12">
  <% paginate_posts.each do |post| %>
    <div class="column">
      <article class="card card--blog">
        <div class="card__content">
          <%= link_to post, class: "card__link" do %>
            <h5 class="card__title"><%= translated_attribute post.title %></h5>
          <% end %>
          <%= render partial: "author", locals: { post: post } %>
          <%= sanitize post_description(post) %>
        </div>
      </article>
    </div>
  <% end %>
</div>
<%= decidim_paginate paginate_posts %>
